<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:text="Register"
            android:textColor="@color/mauTrang"
            android:textSize="48sp"
            android:textStyle="bold" />
    </LinearLayout>

     <LinearLayout
         android:layout_marginTop="48dp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <t3h.com.musicbolero.customview.CustomEdittextEmail
             android:drawableLeft="@drawable/user"
             android:drawablePadding="16dp"
             android:textColorHint="@color/mauXam"
             android:layout_margin="16dp"
             android:textColor="@color/mauXam"
             android:hint="Địa chỉ email"
             android:id="@+id/edt_email_register"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
         <t3h.com.musicbolero.customview.CustomPasswordEdittext
             android:drawableLeft="@drawable/password"
             android:drawablePadding="16dp"
             android:textColorHint="@color/mauXam"
             android:layout_margin="16dp"
             android:textColor="@color/mauXam"
             android:hint="Mật khẩu"
             android:id="@+id/edt_password_register"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
         <t3h.com.musicbolero.customview.CustomPasswordEdittext
             android:drawableLeft="@drawable/password"
             android:drawablePadding="16dp"
             android:textColorHint="@color/mauXam"
             android:layout_margin="16dp"
             android:textColor="@color/mauXam"
             android:hint="Nhập lại mật khẩu"
             android:id="@+id/edt_input_password_register"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

     </LinearLayout>

     <LinearLayout
         android:layout_gravity="center"
         android:weightSum="4"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <Button
             android:textAllCaps="false"
             android:textColor="@color/mauTrang"
             android:background="@drawable/custom_button_login_sigup"
             android:layout_margin="16dp"
             android:layout_weight="3"
             android:text="Register"
             android:id="@+id/btn_register_register"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <Button
             android:textAllCaps="false"
             android:textColor="@color/mauTrang"
             android:id="@+id/btn_canced_register"
             android:background="@drawable/custom_button_login_sigup"
             android:layout_margin="16dp"
             android:layout_weight="1"
             android:text="Canced"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

     </LinearLayout>

</LinearLayout>